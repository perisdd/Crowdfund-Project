@page
@using Tsontarw_Razor.Domain;
@model Tsontarw_Razor.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<a class="btn btn-primary" asp-page="Create">Add New</a>

<table class="table">
    <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Details</th>
    </thead>
    <tbody>
        @foreach (User user in Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td><a asp-page="Details" asp-route-Id="@user.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
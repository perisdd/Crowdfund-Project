@page
@using Crowdfund.Models;
@model Crowdfund.Pages.Projects.IndexModel
@{
	ViewData["Title"] = "Projects";
}

<div class="most-popular">
	<div class="row">
		<div class="col-lg-12">
			<div class="heading-section">
				<h4>Explore Projects</h4>
			</div>
			<div class="row">
				@foreach (Project project in Model.Projects)
				{
					<div class="col-lg-3 col-sm-6">
						<a class="nav-link" href="~/Projects/Details/@project.Id">
						<div class="item">
							<img src="@project.ImgUrl" />
							<h4>@project.Title<span>@project.ProjectCategory</span></h4>
							<ul>
								<li><i class="fa">@project.Contributions &euro;</i></li>
								<li><i class="fa">@project.Goal &euro;</i></li>
							</ul>
						</div>
						</a>
					</div>
				}
			</div>
		</div>
	</div>
</div>
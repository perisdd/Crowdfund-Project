@page "{id}"
@model Crowdfund.Pages.Actors.DetailsModel
@{
    ViewData["Title"] = "Actor Details";
}

<h1>@Model.Actor.FirstName @Model.Actor.LastName</h1>

<h2>Movies with Actor</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Director</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.ActorMovies)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Description</td>
                <td>@movie.Genre</td>
                <td>@movie.Director</td>
            </tr>
        }
    </tbody>
</table>

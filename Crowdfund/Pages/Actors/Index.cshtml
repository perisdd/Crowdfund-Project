@page
@using Crowdfund.Domain;
@model Crowdfund.Pages.Actors.IndexModel
@{
    ViewData["Title"] = "Actors";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="main-banner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="header-text">
                                <h6>This is a test website</h6>
                                <h4>We use <em>azure</em> for the SQL database and also the back-end</h4>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
<h1>Actors</h1>
<a class="btn btn-primary" asp-page="Create">Add New</a>

<table class="table">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Details</th>
    </thead>
    <tbody>
        @foreach (Actor actor in Model.Actors)
        {
            <tr>
                <td>@actor.FirstName</td>
                <td>@actor.LastName</td>
                <td><a asp-page="Details" asp-route-Id="@actor.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>

@page
@model Crowdfund.Pages.Creators.CreateModel
@{
    ViewData["Title"] = "Create Creator";
}

@******layout start**********@

<div class="main-banner">
    <div class="row">
        <div class="col-lg-7">
            <div class="header-text">
                <h4>Create a <em>Creator</em></h4>

                @******layout end**********@


                                
                    <div class="row">
                    <div class="col-md-4">
                                            
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <p class="text-white">
                                    <label asp-for="Creator.FirstName" class="control=label"></label>
                                    <input asp-for="Creator.FirstName" class="form-control" />
                                    <span asp-validation-for="Creator.FirstName" class="text-danger"></span>
                                </p>
                            </div>

                            <div class="form-group">
                                <p class="text-white">
                                    <label asp-for="Creator.LastName" class="control=label"></label>
                                    <input asp-for="Creator.LastName" class="form-control" />
                                    <span asp-validation-for="Creator.LastName" class="text-danger"></span>
                                </p>
                            </div>

                            <div class="form-group">
                                <p class="text-white">
                                    <label asp-for="Creator.Email" class="control=label"></label>
                                    <input asp-for="Creator.Email" class="form-control" />
                                    <span asp-validation-for="Creator.Email" class="text-danger"></span>
                                </p>
                            </div>

                            <div class="form-group">
                                <p class="text-white">
                                    <label asp-for="Creator.ImgUrl" class="control=label"></label>
                                    <input asp-for="Creator.ImgUrl" class="form-control" />
                                    <span asp-validation-for="Creator.ImgUrl" class="text-danger"></span>
                                </p>
                            </div>

                                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                            <div class="form-group">
                                <input class="btn btn-outline-light" type="submit" value="Create" />
                            </div>
                        </form>
                    </div>
                </div>
                                
                    <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                    <div class="main-border-button">
                        <a href="~/Creators/Index">Go Back</a>
                    </div>
                </div>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}
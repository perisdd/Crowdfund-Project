@page
@model Crowdfund.Pages.Creators.CreateModel
@{
    ViewData["Title"] = "Create Creator";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="main-banner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="header-text">
                                <h6>Creators/Create</h6>
                                <h4>Create a <em>Creator</em> here</h4>
                                <h1>Create Creator</h1>
                                <div class="row">
                                    <div class="col-md-4">
                                        <form method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label asp-for="Creator.FirstName" class="control=label"></label>
                                                <input asp-for="Creator.FirstName" class="form-control" />
                                                <span asp-validation-for="Creator.FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Creator.LastName" class="control=label"></label>
                                                <input asp-for="Creator.LastName" class="form-control" />
                                                <span asp-validation-for="Creator.LastName" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Creator.Email" class="control=label"></label>
                                                <input asp-for="Creator.Email" class="form-control" />
                                                <span asp-validation-for="Creator.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Creator.UserName" class="control=label"></label>
                                                <input asp-for="Creator.UserName" class="form-control" />
                                                <span asp-validation-for="Creator.UserName" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div>
                                    <a asp-page="Creators/Index">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

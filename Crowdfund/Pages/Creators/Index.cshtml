@page
@using Crowdfund.Models;
@model Crowdfund.Pages.Creators.IndexModel
@{
	ViewData["Title"] = "Creators";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="main-banner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="header-text">
                                <h6></h6>
                                <h4>you are at <em>Crators/Index</em> here</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email Address</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Creator creator in Model.Creators)
                                        {
                                            <tr>
                                                <td>@creator.FirstName</td>
                                                <td>@creator.LastName</td>
                                                <td>@creator.Email</td>
                                                <td><a asp-page="Details" asp-route-Id="@creator.Id">Details</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

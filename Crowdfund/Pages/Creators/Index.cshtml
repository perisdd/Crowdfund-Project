@page
@using Crowdfund.Models;
@model Crowdfund.Pages.Creators.IndexModel
@{
	ViewData["Title"] = "Creators";
}

@******layout start**********@

<div class="main-banner">
    <div class="row">
        <div class="col-lg-7">
            <div class="header-text">
                <h4>Creators @*<em>Index</em>*@</h4>

                <div class="main-button">
                    <a class="nav-link" asp-area="" asp-page="/Creators/Create">Create a Creator</a>
                </div>

                @******layout end**********@

                <table class="table">
					<thead style="color: #ec6090">
						<tr>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Email Address</th>
							<th>Details</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Creator creator in Model.Creators)
						{
							<tr style="color: white">
								<td>@creator.FirstName</td>
								<td>@creator.LastName</td>
								<td>@creator.Email</td>
								<td><a asp-page="Details" asp-route-Id="@creator.Id">Projects</a></td>
							</tr>
						}
					</tbody>
				</table>
            </div>
        </div>
    </div>
</div>
<div class="main-banner">
	<div class="row">
		<div class="col-lg-7">
			<div class="header-text">
				<h4>Creators</h4>

				<div class="main-button" style="margin-bottom:15px">
					<a class="nav-link" asp-area="" asp-page="/Creators/Create">Add Creator</a>
				</div>

				<table class="table">
					<thead style="color: #ec6090">
						<tr>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Email Address</th>
							@*<th>Details</th>*@
						</tr>
					</thead>
					<tbody>
						@foreach (Creator creator in Model.Creators)
						{
							<tr style="color: white">
								<td>@creator.FirstName</td>
								<td>@creator.LastName</td>
								<td>@creator.Email</td>
								<td><a href="~/Creators/Delete/@creator.Id">Creator Delete</a></td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<script src="~/js/popupalert.js"></script>
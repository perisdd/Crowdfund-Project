@page
@using Crowdfund.DB;
@using Crowdfund.Models
@model Crowdfund.Pages.Creators.CreatorsModel
@{
    ViewData["Title"] = "Creators";
}
<h1>Users</h1>
<a class="btn btn-primary" asp-page="Create">Add New</a>

<table class="table">
    <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Details</th>
    </thead>
    <tbody>
        @foreach (Creator creator in Model.Creators)
        {
            <tr>
                <td>@creator.FirstName</td>
                <td>@creator.LastName</td>
                <td><a asp-page="Details" asp-route-Id="@creator.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>

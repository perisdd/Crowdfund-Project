@page
@model Crowdfund.Pages.Backers.CreateModel

@{
    ViewData["Title"] = "CreateBacker";
}

<div class="main-banner">
    <div class="row">
        <div class="col-lg-7">
            <div class="header-text">
                <h4>Create a <em>Backer</em></h4>
				
				<h6>Backers stored currently in DB: @Model.BackerCount</h6>

				<div class="row">
					<div class="col-md-4">
						<form method="post">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-group">
								<p class="text-white">
									<label asp-for="Backer.FirstName" class="control-label"></label>
									<input asp-for="Backer.FirstName" class="form-control" />
									<span asp-validation-for="Backer.FirstName" class="text-danger"></span>
								</p>
							</div>
							<div class="form-group">
								<p class="text-white">
									<label asp-for="Backer.LastName" class="control-label"></label>
									<input asp-for="Backer.LastName" class="form-control" />
									<span asp-validation-for="Backer.LastName" class="text-danger"></span>
								</p>
							</div>
							<div class="form-group">
								<p class="text-white">
									<label asp-for="Backer.Email" class="control-label"></label>
									<input asp-for="Backer.Email" class="form-control" />
									<span asp-validation-for="Backer.Email" class="text-danger"></span>
								</p>
							</div>
							
							<p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>

							<div class="form-group">
								<p class="text-white">
									<input class="btn btn-outline-light" type="submit" value="Create" />
								</p>
							</div>

							<p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
							<div class="main-border-button"><a asp-page="Index">Go Back</a></div>
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
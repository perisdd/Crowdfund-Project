@page
@model Crowdfund.Pages.Backers.CreateModel

@{
    ViewData["Title"] = "CreateBacker";
}


@******layout start**********@
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="main-banner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="header-text">
                                <h4>Create a <em>Backer</em> here</h4>
                                @******layout end**********@


<h6>Backers stored currently in DB: @Model.BackerCount</h6>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Backer.FirstName" class="control-label"></label>
                <input asp-for="Backer.FirstName" class="form-control" />
                <span asp-validation-for="Backer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.LastName" class="control-label"></label>
                <input asp-for="Backer.LastName" class="form-control" />
                <span asp-validation-for="Backer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.Email" class="control-label"></label>
                <input asp-for="Backer.Email" class="form-control" />
                <span asp-validation-for="Backer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.UserName" class="control-label"></label>
                <input asp-for="Backer.UserName" class="form-control" />
                <span asp-validation-for="Backer.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.Password" class="control-label"></label>
                <input asp-for="Backer.Password" class="form-control" />
                <span asp-validation-for="Backer.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Backer.Role" class="control-label"></label>
                <select asp-for="Backer.Role" class="form-control"></select>
                <span asp-validation-for="Backer.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">My Backer JOB</a>
</div>


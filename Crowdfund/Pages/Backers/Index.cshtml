@page
@using Crowdfund.Models;
@model Crowdfund.Pages.Backers.IndexModel
@{
	ViewData["Title"] = "Backers";
}

@******layout start**********@
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-content">
				<div class="main-banner">
					<div class="row">
						<div class="col-lg-7">
							<div class="header-text">
								<h4>Backer <em>Index</em></h4>
								@******layout end**********@
								<div class="main-button">
									<a class="nav-link" asp-area="" asp-page="/Backers/Create">Create Backer</a>
								</div>

								<table class="table">
									<thead>
										<tr>
											<th>Title</th>
											<th>Description</th>
											<th>Creation Date</th>
											<th>Details</th>
										</tr>
									</thead>
									
									<tbody>
										@foreach (Project project in Model.Projects)
										{
											<tr>
												<td>@project.Title</td>
												<td>@project.Description</td>
												<td>@project.CreationDate</td>
												<td><a asp-page="Details" asp-route-Id="@project.Id">Details</a></td>
											</tr>
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@page
@using Crowdfund.Models;
@model Crowdfund.Pages.Backers.IndexModel
@{
    ViewData["Title"] = "Backers";
}


@* show projects / categories *@

@******layout start**********@
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="main-banner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="header-text">
                                <h4>Backer <em>index</em></h4>
                                @******layout end**********@
                                <div class="main-button">
                                    <a class="nav-link" asp-area="" asp-page="/Backers/Create">Create Backer</a>
                                </div>

    <table class="text-light" class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Project Creation date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Project project in Model.Projects)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Description</td>
                    <td>@project.CreationDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>